<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :as => :string %>
    <%#= f.association :company, collection: @companies, as: :grouped_select, group_method: :companies %>
    <%= f.association :company, label_method: :name, value_method: :id %>
    <%= f.input :importance, collection: 1..4 %>
    
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
  	<%= f.text_field :tag_list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
