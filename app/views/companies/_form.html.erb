<%= simple_form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :as => :string, :label => "Company Name" %>
    <%= f.input :job_title, :as => :string, :label => "Job Title" %>
    <%= f.input :start_date, start_year: Date.today.year - 50, end_year: Date.today.year + 1 %>
    <%= f.input :end_date, start_year: Date.today.year - 50, end_year: Date.today.year + 20 %>
    <%= f.input :city, :as => :string %>
    <%= f.input :state, :as => :string %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
